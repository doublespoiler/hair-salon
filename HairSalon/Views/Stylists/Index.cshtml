@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Current Stylists</h1>

@if (Model.Count == 0)
{
  <h3>There are no Stylists yet.</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Show", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new Stylist", "Create")</p>
